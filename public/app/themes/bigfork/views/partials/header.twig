<header class="header">
    <a href="{{ site.url }}">{{ site.name }}</a>

    <nav class="nav">
        {% if primary_menu %}
            <ul class="nav__menu">
                {% for item in primary_menu.items %}
                    <li class="nav__item {{ item.classes|join(' ') }}">
                        <a target="{{ item.target }}" href="{{ item.link }}" class="nav__link">{{ item.title }}</a>

                        {% if item.children %}
                            <ul class="nav__submenu">
                                {% for item in item.children %}
                                    <li class="nav__subitem {{ item.classes|join(' ') }}">
                                        <a target="{{ item.target }}" href="{{ item.link }}"
                                           class="nav__sublink">{{ item.title }}</a>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% endif %}
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </nav>
</header>
